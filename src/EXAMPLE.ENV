# Application
APP_NAME="Database Guru"
VERSION="2.0.0"
ENVIRONMENT=development
DEBUG=true

# Database
# Docker PostgreSQL (from docker-compose):
DATABASE_URL=postgresql://dbuser:dbpass@localhost:5432/dbqa
# Or local PostgreSQL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dbqa
# Or SQLite (easier for testing):
# DATABASE_URL=sqlite:///./data/app.db

DB_POOL_SIZE=10

# Security (generate these!)
SECRET_KEY=change-this-secret-key-$(openssl rand -hex 32)
JWT_SECRET=change-this-jwt-secret-$(openssl rand -hex 32)
JWT_ALGORITHM=HS256

# Ollama - Local or Docker
# Local Ollama (recommended if you have Ollama installed):
OLLAMA_BASE_URL=http://localhost:11434
# Docker Ollama (uses docker-compose):
# OLLAMA_BASE_URL=http://localhost:11434  # Same port, docker maps it

# Choose your default model (any model you have installed):
OLLAMA_MODEL=llama3
# Options: llama3, mistral, codellama, phi3, deepseek-coder, etc.

# Allow users to select models per-query
OLLAMA_ALLOW_MODEL_SELECTION=true

# Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# SQL Execution Limits
MAX_QUERY_ROWS=1000
QUERY_TIMEOUT_SECONDS=30
ALLOW_WRITE_OPERATIONS=false  # Safety: disable INSERT/UPDATE/DELETE by default